NEXT_PUBLIC_HOCUSPOCUS_URL=ws://localhost:3001
NEXT_PUBLIC_CONVEX_URL=
NEXT_PUBLIC_WITHMD_ENABLE_REALTIME=1
NEXT_PUBLIC_WITHMD_ENABLE_REALTIME_EXPERIMENTAL=0
NEXT_PUBLIC_POSTHOG_ENABLED=0
NEXT_PUBLIC_POSTHOG_TOKEN=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
NEXT_PUBLIC_POSTHOG_AUTOCAPTURE=0
NEXT_PUBLIC_POSTHOG_RECORDING=0
WITHMD_ENABLE_PRIVATE_FONTS=0
WITHMD_PRIVATE_FONTS_STYLESHEET_URL=

# Shared secret for signing collab auth tokens (must match Convex env var)
WITHMD_COLLAB_TOKEN_SECRET=

# ── web2md website conversion (optional) ──────────────────────────────────────
# Snapshot freshness window in days.
WEB2MD_CACHE_TTL_DAYS=30

# Anonymous rate limits per hour.
WITHMD_WEB2MD_RATE_LIMIT_NORMAL=60
WITHMD_WEB2MD_RATE_LIMIT_REVALIDATE=18

# Optional pipeline forcing for debugging only.
# leave empty for normal fallback order:
# local_heuristic -> openrouter_gpt_oss_20b -> jina_reader -> firecrawl_scrape
WITHMD_WEB2MD_FORCE_ENGINE=

# Optional stage toggles (set to 1 to disable).
WITHMD_WEB2MD_DISABLE_LOCAL=0
WITHMD_WEB2MD_DISABLE_OPENROUTER=0
WITHMD_WEB2MD_DISABLE_JINA=0
WITHMD_WEB2MD_DISABLE_FIRECRAWL=0

# Optional heuristic request tuning.
WITHMD_WEB2MD_USER_AGENT=
WITHMD_WEB2MD_ACCEPT_LANGUAGE=en-US,en;q=0.9
WITHMD_WEB2MD_HF_TOKEN=

# Optional Jina API key for higher limits.
WITHMD_WEB2MD_JINA_API_KEY=
WITHMD_WEB2MD_JINA_TIMEOUT_MS=35000

# Optional Firecrawl fallback key/settings.
WITHMD_WEB2MD_FIRECRAWL_API_KEY=
WITHMD_WEB2MD_FIRECRAWL_API_BASE=https://api.firecrawl.dev/v2
WITHMD_WEB2MD_FIRECRAWL_TIMEOUT_MS=45000
WITHMD_WEB2MD_FIRECRAWL_WAIT_FOR_MS=0
WITHMD_WEB2MD_FIRECRAWL_MAX_AGE_MS=0
WITHMD_WEB2MD_FIRECRAWL_PROXY=auto

# Optional OpenRouter fallback key/model.
OPENROUTER_API_KEY=
WITHMD_WEB2MD_LLM_MODEL=openai/gpt-oss-20b
